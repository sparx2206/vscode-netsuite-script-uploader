{
    "name": "netsuite-script-uploader",
    "displayName": "NetSuite Script Uploader",
    "description": "",
    "version": "0.0.1",
    "publisher": "petrasekdan",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:netsuite.initialize"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "title": "NetSuite Configuration",
            "type": "object",
            "properties": {
                "netsuite.sandboxUrl":{
                    "type":"string",
                    "default":null,
                    "description": "Specifies user defined NetSuite Sanbox URL used by NetSuite Extensions"
                },
                "netsuite.productionUrl":{
                    "type":"string",
                    "default":null,
                    "description": "Specifies user defined NetSuite Production URL used by NetSuite Extensions"
                },
                "netsuite.userName":{
                    "type":"string",
                    "default":null,
                    "description": "Specifies user defined NetSuite user name used by NetSuite Extensions"
                },
                "netsuite.userRole":{
                    "type":"number",
                    "default":0,
                    "description": "Specifies user defined NetSuite user role used by NetSuite Extensions"
                }
            }
        },
        "menus":{
            "explorer/context": [{
            "command": "netsuite.push",
            "title":"NetSuite: Push",
            "group": "navigation"
        }]
        },
        "commands":[{
            "command": "netsuite.initialize",
            "title": "NetSuite: Initialize"
        },
        {
            "command": "netsuite.push",
            "title": "NetSuite: Push"
        }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}